{
    "tasks": {
        "dev": "deno run -A npm:nuxi dev",
        "build": "deno run -A npm:nuxi build",
        "generate": "deno run -A npm:nuxi generate",
        "preview": "deno run -A npm:nuxi preview",
        "postinstall": "deno run -A npm:nuxi prepare",
        "install": "deno install",
        "deploy": "deno task generate && npx gh-pages -d .output/public --dotfiles"
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment"
    },
    "nodeModulesDir": "auto"
}